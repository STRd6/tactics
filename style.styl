html, body
  margin: 0
  height: 100%
  user-select:none

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  font-size: 12px

canvas, .ui
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.ui
  height: 100%

  canvas
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto

.messages
  box-sizing: border-box
  background-color: rgba(0, 0, 0, 0.75)
  color: white
  display: none
  margin: 0
  padding: 4px
  position: absolute
  top: 0
  height: 128px
  width: 100%

.actions
  position: absolute
  bottom: 0
  padding: 0 64px
  pointer-events: none

  .action
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8), 0 1px 1px rgba(0, 0, 0, 0.4)
    background-color: #847E87
    background-position: 50% 70%
    background-repeat: no-repeat
    border: 1px solid black
    border-radius: 4px
    border-right: none
    display: inline-block
    padding: 4px
    pointer-events: auto
    position: relative
    width: 64px
    height: 64px
    text-align: center
    text-shadow: 0 -1px 0 rgba(255, 255, 255, 0.4)
    vertical-align: bottom

    &:last-child
      border-right: 1px solid

    &:active, &.active
      background-color: #9BADB7
      box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6)

    &.disabled
      background-color: #696A6A
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8), 0 1px 1px rgba(0, 0, 0, 0.4)
      text-shadow: none

  .costs
    position: absolute
    right: 5px
    width: 5px
    top: 5%
    height: 90%
    box-sizing: border-box

  .cost
    border-radius: 2px
    background: #838cc0
    height: 100%
    width: 100%
    margin: 1px
    border: 1px solid white