*
  box-sizing: border-box

html
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  font-size: 12px
  height: 100%
  margin: 0
  overflow: hidden
  user-select: none

canvas, .ui
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.progress_container
  border-radius: 2px
  width: 90%
  height: 30px
  border: 1px solid black
  position: absolute
  top: 0
  bottom: 0
  margin: auto

.progress
  height: 100%
  background-color: black

.cooldown
  top: 4px
  display: inline-block
  position: absolute
  right: -5px
  width: 24px

  &:before
    content: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAcAAAAHCAYAAADEUlfTAAAAMklEQVQIW2NkQID/SGxGEBtMAAFIAsaG80ECyBIobGySMBP/o0siWcsAlsRrJ0w1hmsBn/oOBZ7vc+sAAAAASUVORK5CYII=")

.ui
  height: 100%

  .title
    font-size: 5em
    color: white
    position: absolute
    top: 45%
    bottom: 0
    left: 45%
    right: 0
    margin: auto

  canvas
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto

.characters_container
  color: black
  position: absolute
  top: 0
  right: 0

.bolt
  display: none
  position: absolute
  bottom: 0
  right: 3px

  &:after
    content: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAJCAYAAAD6reaeAAAAJ0lEQVQIW2NkwAT/GdHE/gP5jMiCYAGQIpggXAAmCBJAAVQyE8UYAFBxCQhl+Rv2AAAAAElFTkSuQmCC)

.character
  &.inactive, &.stunned, &.dead
    cursor: not-allowed
    -webkit-filter: grayscale(100%)

  &.stunned
    .bolt
      display: block

  &.squad
    .avatar
      &:after
        content: url(data:image/png;base64,)

    // Add the squad specific avatars here
    // Eventually make HUD avatars for each character class
    &.spunk
      .avatar
        &:after
          content: url(data:image/png;base64,)

  &.dead
    .avatar
      &:after
        content: url(data:image/png;base64,)

.health
  height: 10px
  padding-left: 5%

  .heart
    &:after
      content: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAXklEQVQYV2NkAII1Rkb/QXTIuXOMIBqbGCNIka6qIVjy8u3zYMXYxFAEYYphGpE1YyiEWQ2jYbaA3YRsFbJCmCKQGIrjsVkJ0whXiGwysklYFcIUIwcTToXoniFZIQACVkALUKk9JAAAAABJRU5ErkJggg==)

.character
  border: none
  cursor: pointer
  width: 150px
  height: 100px
  background-color: #847E87
  display: inline-block
  position: relative
  box-sizing: border-box
  margin: 1px
  margin-top: 0
  margin-right: 0
  vertical-align: top

  &.active
    background-color: rgb(99, 155, 255)

  .avatar
    display: inline-block
    top: 0
    bottom: -25px
    left: 5%
    margin: auto
    width: 32px
    height: 32px
    position: absolute
    zoom: 1.5

  .info, .stats
    position: absolute

  .info
    left: 5%
    top: 14px
    width: 100%

  .stats
    top: 44px
    left: 60px

  .name
    margin: 0
    display: inline-block

  .type
    position: absolute
    right: 10%
    top: 5px

.hud
  position: relative
  background-color: rgba(0, 0, 0, 0.75)
  box-sizing: border-box
  color: white
  margin: 0
  padding: 0
  height: 100px
  top: 0
  width: 100%
  transition-property: top
  transition-duration: 0.200s

  &.hidden
    top: -100px

  .toggle
    border-bottom-right-radius: 4px
    border-bottom-left-radius: 4px
    text-align: center
    font-size: 24px
    line-height: 0.35
    width: 30px
    height: 15px
    background-color: rgba(0, 0, 0, 0.75)
    position: absolute
    bottom: -15px
    left: 0
    right: 0
    margin: auto
    cursor: pointer

.messages
  box-sizing: border-box
  overflow: auto
  width: 35%
  height: 100%
  margin: 0

.actions
  position: absolute
  bottom: 0
  padding: 0 64px
  pointer-events: none

  .action
    background-color: #847E87
    background-position: 50% 70%
    background-repeat: no-repeat
    border: 1px solid black
    border-right: none
    cursor: pointer
    display: inline-block
    height: 85px
    padding: 4px
    pointer-events: auto
    position: relative
    vertical-align: bottom
    width: 100px

    &.blank
      visibility: hidden

    &:last-child, &.last
      border-right: 1px solid

    &:active, &.active
      background-color: #9BADB7

    &.disabled
      background-color: #696A6A
      cursor: not-allowed

.costs
  position: absolute
  bottom: 2px
  width: 85%
  left: 5%
  height: 5px
  box-sizing: border-box

  .container
    position: relative
    text-align: center

// HUD positioning is different
.character
  .costs
    top: 4px
    right: 5%
    width: auto
    left: auto

.cost
  box-sizing: border-box
  border-radius: 2px
  background: #639BFF
  display: inline-block
  height: 4px
  width: 17px
  margin-right: 2px
  border: 1px solid white
  float: left

  &.rest
    background: rgb(217, 87, 99)
