html, body
  margin: 0
  height: 100%
  user-select:none

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  font-size: 12px

canvas, .ui
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.cooldown
  bottom: 0
  display: inline-block
  position: absolute
  right: 0
  width: 24px

  &:before
    content: "âŒ›"

.ui
  height: 100%

  canvas
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto

.characters_container
  position: absolute
  top: 0
  right: 0

.character
  width: 70px
  height: 90px
  background-color: #fff
  float: right
  display: inline-block
  margin: 0.5em
  margin-left: 0
  position: relative

  .avatar
    display: inline-block
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto
    width: 32px
    height: 32px
    position: absolute
    zoom: 1.5

  .name
    position: absolute
    bottom: 0
    left: 0
    right: 0
    margin: auto
    text-align: center

.messages_container
  position: relative
  box-sizing: border-box
  color: white
  margin: 0
  padding: 0
  height: 100px
  top: 0
  width: 40%
  transition-property: top
  transition-duration: 0.200s

  &.hidden
    top: -100px

  .toggle
    border-bottom-right-radius: 4px
    border-bottom-left-radius: 4px
    text-align: center
    font-size: 24px
    line-height: 0.35
    width: 30px
    height: 15px
    background-color: rgba(0, 0, 0, 0.75)
    position: absolute
    bottom: -15px
    left: 0
    right: 0
    margin: auto
    cursor: pointer

.messages
  background-color: rgba(0, 0, 0, 0.75)
  box-sizing: border-box
  overflow: auto
  width: 100%
  height: 100%
  margin: 0

.actions
  position: absolute
  bottom: 0
  padding: 0 64px
  pointer-events: none

  .action
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8), 0 1px 1px rgba(0, 0, 0, 0.4)
    background-color: #847E87
    background-position: 50% 70%
    background-repeat: no-repeat
    border: 1px solid black
    border-radius: 4px
    border-right: none
    display: inline-block
    padding: 4px
    pointer-events: auto
    position: relative
    width: 64px
    height: 64px
    text-align: center
    text-shadow: 0 -1px 0 rgba(255, 255, 255, 0.4)
    vertical-align: bottom

    &:last-child
      border-right: 1px solid

    &:active, &.active
      background-color: #9BADB7
      box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6)

    &.disabled
      background-color: #696A6A
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8), 0 1px 1px rgba(0, 0, 0, 0.4)
      text-shadow: none

  .costs
    position: absolute
    bottom: 5px
    width: 85%
    left: 5%
    height: 5px
    box-sizing: border-box

    .container
      position: relative
      text-align: center

  .cost
    box-sizing: border-box
    border-radius: 2px
    background: #639BFF
    display: inline-block
    height: 4px
    width: 17px
    margin-right: 2px
    border: 1px solid white
    float: left